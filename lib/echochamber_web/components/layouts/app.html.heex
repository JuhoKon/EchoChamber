<%= if @current_user do %>
  <div class="flex lg:flex-shrink-0" role="region">
    <div class="flex flex-col w-64 border-r pb-4">
      <div class="h-0 flex-1 flex flex-col overflow-y-auto">
        <nav class="px-3 h-[calc(100vh-85px)]">
          <%= live_render(@socket, EchochamberWeb.OnlineLive, id: "sidebar") %>
        </nav>
      </div>
    </div>
  </div>
<% end %>
<main class="w-full">
  <div>
    <!-- <.flash_group flash={@flash} /> -->
    <%= @inner_content %>
  </div>
</main>
